# .env.example
# 🌐 Environment
APP_ENV=development
APP_PORT=3000
APP_URL=http://localhost:3000

# 📦 Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fiberecomapidb
DB_USER=postgres
DB_PASS=your_database_password
DB_SSL=disable

# 🔐 JWT Config
JWT_SECRET=your_very_secure_jwt_secret_key_at_least_32_characters_long
JWT_EXPIRES_IN=24h

# 👑 Admin User Seeding (Required for first-time setup)
ADMIN_EMAIL=
ADMIN_PASSWORD=
ADMIN_FIRST_NAME=
ADMIN_LAST_NAME=

# 🗄️ Database Migration
AUTO_MIGRATE=false